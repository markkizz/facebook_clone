          <li class="li-item"><i class="fab fa-internet-explorer mr-2"></i>list</li>
        </ul>
      </form>
      <!-- news feed -->
      <div class="col-6">
        <div class="status">
          <h1>test</h1>
        </div>
        <div class="card feed">
          <div class="card-body">
            <!-- feed pro -->
            <div class="feed-pro row">
              <div class="col-auto">
                  <img src="/images/profile.png" class="mr-0">
              </div>
              <div class="col name">
                <p>Mark Kriz</p>
                <small class="text-muted">20 min <i class="fas fa-globe-asia ml-1"></i></small>
              </div>
              <div class="col-auto">...</div>
            </div>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
              content.</p>
          </div>
          <img src="/images/test.jpg" class="card-img-top" alt="...">
        </div>
      </div>
      <!-- right side -->
      <div class="col-3">
        <div class="card">
          <div class="card-body">
            This is some text within a card body.
          </div>
        </div>
      </div>
